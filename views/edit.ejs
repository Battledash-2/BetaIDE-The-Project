	<div id='body'>
		<style>
			#ltv {
				position: absolute;
				right: 0;
				height: 50px;
				width: 70px;
				top: 0;
				text-decoration: none;
				color: #fff;
				display: grid;
				align-content: center;
				background: #8c8c8c;
				cursor: pointer;
			}
			#ltv:hover {
				background: #6b6a6a;
			}
			#ltv-v2 {
				position: absolute;
				right: 70px;
				height: 50px;
				width: 70px;
				top: 0;
				text-decoration: none;
				color: #fff;
				display: grid;
				align-content: center;
				background: #8c8c8c;
				cursor: pointer;
			}
			#ltv-v2:hover {
